{% extends "base.html.twig" %}

{% block titre %} Liste des Livres :{% endblock %}

{% block contenu %}
<table class="table text-center monTableau" id="tableauLivres">
        <thead>
            <tr class="table-dark">
                <th>Titre</th>
                <th>Auteur</th>
                <th>Nombre de pages</th>
                <th>Année</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for livre in livres %}
                <tr>
                    <td><a href="/livres/{{ livre._id }}">{{ livre.nom }}</a></td>
                    <td>{{livre.auteur}}</td>
                    <td>{{livre.pages}}</td>
                    <td>{{livre.annee}}</td>
                    <td><a href="" class="btn btn-warning">Modifier</a></td>
                    <td><a href="" class="btn btn-danger">Supprier</a></td>
                </tr>
            {% endfor %}

            <tr>
                <td><a href="/livre/La France du 19ème">La France du 19ème</a></td>
                <td>Albert PATRICK</td>
                <td>500</td>
                <td></td>
                <td><a href="" class="btn btn-warning">Modifier</a></td>
                <td><a href="" class="btn btn-danger">Supprier</a></td>
            </tr>
              <tr>
                <td><a href="/livre/Le monde des animaux">Le monde des animaux</a></td>
                <td>Marc MERLIN</td>
                <td>250</td>
                <td></td>
                <td><a href="" class="btn btn-warning">Modifier</a></td>
                <td><a href="" class="btn btn-danger">Supprier</a></td>
            </tr>
              <tr>
                <td><a href="/livre/Le virus d'Asie">Le virus d'Asie</a></td>
                <td>Tya MILO</td>
                <td>120</td>
                <td></td>
                <td><a href="" class="btn btn-warning">Modifier</a></td>
                <td><a href="" class="btn btn-danger">Supprier</a></td>
            </tr>
        </tbody>
    </table>
    <a href="" class="btn btn-success w-100 mb-4">Ajouter</a>
    <form id="ajoutForm" class="" method = "POST" action="">
        <fieldset>
            <legend>Création d'un livre</legend>
            <div class="form-group">
                <label for="titre">Titre</label>
                <input type="text" class="form-control" name="nom" id="titre">
            </div>
            <div class="form-group">
                <label for="auteur">Auteur</label>
                <input type="text" class="form-control" name="auteur" id="auteur">
            </div>
            <div class="form-group">
                <label for="pages">Pages</label>
                <input type="number" class="form-control" name="pages" id="pages">
            </div>
            <div class="form-group">
                <label for="annee">Année</label>
                <input type="number" class="form-control" name="annee" id="annee">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" name="description" id="description">
                </textarea>
            </div>
            <button class="btn btn-primary" type="submit">Valider</button>
        </fieldset>
    </form>
    <script src="/javascript/ajoutLivre.js"></script>
{% endblock %}