{% extends "base.html.twig" %}

{% block titre %} {{livre.nom}} {% endblock %}

{% block contenu %}
    <div class="mt-5 row m-2">
        <div class="col-md-6">
            <h3>Information </h3>
            <div> Auteur : {{livre.auteur}} </div>
            <div> Année : {{livre.annee}} </div>
            <div> Nombre de page : {{livre.pages}} </div>
            <img src='https://th.bing.com/th/id/OIP.M9AsZ7Sm6Qq-LXpY92Tt2AHaEK?w=312&h=180&c=7&o=5&pid=1.7'>
        </div>
        <div class="col-md-6 text-center">
            <h3>Résumé </h3>
            <p class='font-weight-bold'>{{livre.description}}</p>
        </div>
    </div>

{% endblock %}